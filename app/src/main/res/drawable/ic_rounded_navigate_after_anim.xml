<animated-vector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:aapt="http://schemas.android.com/aapt">
  <aapt:attr name="android:drawable">
    <vector
      android:name="vector"
      android:width="24dp"
      android:height="24dp"
      android:viewportWidth="24"
      android:viewportHeight="24"
      android:autoMirrored="true">
      <path
        android:name="arrow"
        android:pathData="M 9.78 7.411 L 14.381 12 L 9.791 16.593"
        android:strokeColor="#000000"
        android:strokeWidth="2"
        android:strokeLineCap="round"
        android:strokeLineJoin="round" />
    </vector>
  </aapt:attr>
  <target android:name="arrow">
    <aapt:attr name="android:animation">
      <set>
        <objectAnimator
          android:propertyName="pathData"
          android:duration="125"
          android:valueFrom="M 9.78 7.411 L 14.381 12 L 9.791 16.593"
          android:valueTo="M 9.78 8.97 L 16.922 12 L 9.791 14.977"
          android:valueType="pathType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="pathData"
          android:startOffset="125"
          android:duration="100"
          android:valueFrom="M 9.78 8.97 L 16.922 12 L 9.791 14.977"
          android:valueTo="M 9.78 6.545 L 12.072 12 L 9.791 17.517"
          android:valueType="pathType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="pathData"
          android:startOffset="225"
          android:duration="75"
          android:valueFrom="M 9.78 6.545 L 12.072 12 L 9.791 17.517"
          android:valueTo="M 9.78 7.411 L 14.381 12 L 9.791 16.593"
          android:valueType="pathType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
      </set>
    </aapt:attr>
  </target>
</animated-vector>
