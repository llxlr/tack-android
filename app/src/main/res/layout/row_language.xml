<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/linear_language_container"
  style="@style/Widget.Tack.LinearLayout.ListItem.TwoLine.More.Segmented">

  <LinearLayout style="@style/Widget.Tack.LinearLayout.ListItem.TextBox.Stretch">

    <TextView
      android:id="@+id/text_language_name"
      style="@style/Widget.Tack.TextView.ListItem.Title" />

    <TextView
      android:id="@+id/text_language_translators"
      style="@style/Widget.Tack.TextView.ListItem.Description" />

  </LinearLayout>

  <ImageView
    android:id="@+id/image_language_selected"
    style="@style/Widget.Tack.ImageView.Icon"
    android:layout_marginStart="16dp"
    android:src="@drawable/ic_rounded_check_circle"
    app:tint="?attr/colorOnSecondaryContainer"
    tools:ignore="ContentDescription" />

</LinearLayout>