<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingTop="16dp"
  android:paddingStart="24dp"
  android:paddingEnd="24dp">

  <TextView
    android:id="@+id/text_dialog_parts_title"
    style="@style/Widget.Tack.TextView.HeadlineSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Song"
    android:singleLine="true"
    tools:ignore="HardcodedText" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/text_dialog_parts_count"
      style="@style/Widget.Tack.TextView.ListItem.Description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="3 parts"
      android:singleLine="true"
      tools:ignore="HardcodedText" />

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:src="@drawable/shape_text_separator_dot"
      android:layout_gravity="center_vertical"
      app:tint="?attr/colorOnSurfaceVariant"
      tools:ignore="ContentDescription" />

    <TextView
      android:id="@+id/text_dialog_parts_duration"
      style="@style/Widget.Tack.TextView.ListItem.Description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="2:30"
      android:singleLine="true"
      tools:ignore="HardcodedText" />

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:src="@drawable/shape_text_separator_dot"
      android:layout_gravity="center_vertical"
      app:tint="?attr/colorOnSurfaceVariant"
      tools:ignore="ContentDescription" />

    <TextView
      android:id="@+id/text_dialog_parts_looped"
      style="@style/Widget.Tack.TextView.ListItem.Description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/label_song_not_looped"
      android:singleLine="true" />

  </LinearLayout>

</LinearLayout>