<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/frame_chip_song_container"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:minHeight="48dp">

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/card_chip_song"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:stateListAnimator="@null"
    app:contentPadding="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOnTertiaryContainer"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="?attr/colorTertiaryContainer">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minHeight="32dp"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:gravity="center_vertical">

      <ImageView
        android:id="@+id/image_chip_song"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_rounded_music_note_anim"
        app:tint="?attr/colorOnTertiaryContainer"
        tools:ignore="ContentDescription" />

      <TextView
        android:id="@+id/text_chip_song"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Tack.LabelLarge"
        android:textColor="?attr/colorOnTertiaryContainer"
        android:fontFamily="@font/jost_medium"
        android:text="Song" />

      <ImageView
        android:id="@+id/image_chip_song_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_rounded_close_anim"
        app:tint="?attr/colorOnTertiaryContainer"
        tools:ignore="ContentDescription"
        android:scaleType="centerCrop" />

    </LinearLayout>

  </com.google.android.material.card.MaterialCardView>

  <FrameLayout
    android:id="@+id/frame_chip_song_close"
    android:layout_width="40dp"
    android:layout_height="48dp"
    android:layout_gravity="end" />

</FrameLayout>