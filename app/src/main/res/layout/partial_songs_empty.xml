<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:layout_gravity="center"
  android:paddingStart="16dp"
  android:paddingEnd="16dp">

  <ImageView
    android:layout_width="@dimen/placeholder_illustration_size"
    android:layout_height="@dimen/placeholder_illustration_size"
    android:layout_gravity="center_horizontal"
    android:importantForAccessibility="no"
    android:src="@drawable/illustration_empty_songs"
    android:scaleType="centerCrop"/>

  <TextView
    style="@style/Widget.Tack.TextView.TitleLarge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:text="@string/msg_songs_empty" />

  <TextView
    style="@style/Widget.Tack.TextView.ListItem.Description"
    android:textAlignment="center"
    android:text="@string/msg_songs_empty_description" />

</LinearLayout>